#' Laod TCGA Breast Cancer ATAC-seq expression matrix.
#'
#' @return ATAC-seq count
#' @export
#'
#' @examples
#' library(LinkageData)
#' BreastCancerATAC()
BreastCancerATAC <- function(){
  txt_files <- list.files("inst/extdata/Homo.ATAC/",pattern = "\\.RData$")
  data_list <- lapply(txt_files, function(file) {
    load(paste0("inst/extdata/Homo.ATAC/", file))
    data
  })
  ATAC <- do.call(rbind, data_list)
  return(ATAC)
}

#' Laod MuSC ATAC-seq expression matrix.
#'
#' @return
#' @export
#'
#' @examples
MuSCsATAC <- function(){
  txt_files <- list.files("inst/extdata/Mus.ATAC/",pattern = "\\.RData$")
  data_list <- lapply(txt_files, function(file) {
    load(paste0("inst/extdata/Mus.ATAC/", file))
    data
  })
  ATAC <- do.call(rbind, data_list)
  return(ATAC)
}

BreastCancerRNA <- function(){
  load("inst/extdata/TCGA-BRCA-RNA.RData")
  return(RNA_matrix)
}


MuSCsRNA <- function(){
  load("inst/extdata/mouse.normalize.rna.RData")
  return(mouse.RNA_matrix)
}
